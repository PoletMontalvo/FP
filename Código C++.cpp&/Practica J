#include <iostream>
using namespace std;

int main() {
    // 1.- 
    int num;
    do
    {
        cout << "Dame un nÃºmero: ";
        cin >> num;
        if (num > 0)
        {
            cout << (num * 10) << endl;
        }
    } while (num != 0);
    cout << "0 " << endl;
    
    // 2.- 
    int arreglo[10] = {1, 4, 5, 6, 2, 7, 9, 7, 3, 8};
    int mayor = arreglo[0];
    for (int i = 1; i < 10; ++i) 
    {
        if (arreglo[i] > mayor)
        {
            mayor = arreglo[i];
        }
    }
    cout << "El mayor elemento del arreglo es: " << mayor << endl;
    
    // 3.- 
    int arreglo1[10] = {1, 4, 5, 6, 2, 7, 9, 7, 3, 8};
    int menor = arreglo[0];
    for (int i = 1; i < 10; ++i) 
    {
        if (arreglo1[i] < menor) 
        {
            menor = arreglo1[i];
        }
    }
    cout << "El menor elemento del arreglo es: " << menor << endl;

    return 0;
}
